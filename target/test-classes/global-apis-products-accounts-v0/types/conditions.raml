#%RAML 1.0 Library
uses:
  annotations: ../../global-apis-commons-commons-v0/annotations/annotationsLibrary.raml
  operatorType: operatorType.raml

types:
  conditions:
    type: array
    items:
      properties:
        conditionId:
          (annotations.bindingDefinition):
            - method: "GET"
              input: "NONE"
              output: "REQUIRED"
            - method: "POST"
              input: "REQUIRED"
              output: "REQUIRED"
          enum: [ OPENING_FEE, MIN_BALANCE_FEE, TRANSFER_FEE_PERCENTAGE, MEMBERSHIP_FEE, CHRISTMAS_CAMPAIGN ]
          (annotations.enumDescription):
            - OPENING_FEE: This condition only applies when the user has opened a new account.
            - MIN_BALANCE_FEE: This condition applies for maintenance of the account.
            - TRANSFER_FEE_PERCENTAGE: This condition applies when the user makes a transfer.
            - MEMBERSHIP_FEE: This condition applies for fixing an account maintenance fee.
            - CHRISTMAS_CAMPAIGN: This condition applies for christmas campaign.
          type: string
          description: |
            Condition identifier.
          required: false
        name:
          (annotations.bindingDefinition):
            - method: "GET"
              input: "NONE"
              output: "REQUIRED"
            - method: "POST"
              input: "NONE"
              output: "REQUIRED"
          type: string
          description: |
            Condition name or description.
          required: false
        period:
          (annotations.bindingDefinition):
            - method: "GET"
              input: "NONE"
              output: "OPTIONAL"
            - method: "POST"
              input: "NONE"
              output: "OPTIONAL"
          type: object
          description: |
            Condition periodical information.  It includes the date when the condition will be evaluated.
          required: false
          properties:
            id:
              (annotations.bindingDefinition):
                - method: "GET"
                  input: "NONE"
                  output: "REQUIRED"
                - method: "POST"
                  input: "NONE"
                  output: "REQUIRED"
              enum: [ "DAILY", "WEEKLY", "MONTHLY", "YEARLY" ]
              type: string
              description: |
                Fact period identification.
              required: false
            name:
              (annotations.bindingDefinition):
                - method: "GET"
                  input: "NONE"
                  output: "REQUIRED"
                - method: "POST"
                  input: "NONE"
                  output: "REQUIRED"
              type: string
              description: |
                Fact period name or description.
              required: false
            checkDate:
              (annotations.bindingDefinition):
                - method: "GET"
                  input: "NONE"
                  output: "REQUIRED"
                - method: "POST"
                  input: "NONE"
                  output: "REQUIRED"
              type: datetime
              format: rfc3339
              description: |
                String based on ISO-8601 date format for specifying the next date when the Facts will be evaluated.
              required: false
        facts:
          (annotations.bindingDefinition):
            - method: "GET"
              input: "NONE"
              output: "OPTIONAL"
            - method: "POST"
              input: "NONE"
              output: "OPTIONAL"
          type: array
          description: |
            Facts that must be met to apply the condition.  All the facts will need to be fulfilled in order to apply this condition.
          required: false
          items:
            properties:
              factType:
                (annotations.bindingDefinition):
                  - method: "GET"
                    input: "NONE"
                    output: "REQUIRED"
                  - method: "POST"
                    input: "NONE"
                    output: "REQUIRED"
                type: operatorType.operatorType
                description: |
                  Fact type.
                required: false
              conditionAmount:
                (annotations.bindingDefinition):
                  - method: "GET"
                    input: "NONE"
                    output: "OPTIONAL"
                  - method: "POST"
                    input: "NONE"
                    output: "OPTIONAL"
                type: object
                description: |
                  Fact amount.
                required: false
                properties:
                  amount:
                    (annotations.bindingDefinition):
                      - method: "GET"
                        input: "NONE"
                        output: "REQUIRED"
                      - method: "POST"
                        input: "NONE"
                        output: "REQUIRED"
                    type: number
                    description: |
                      Fact amount value.
                  currency:
                    (annotations.bindingDefinition):
                      - method: "GET"
                        input: "NONE"
                        output: "REQUIRED"
                      - method: "POST"
                        input: "NONE"
                        output: "REQUIRED"
                    type: string
                    description: |
                      String based on ISO-4217 for specifying the Fact amount amount.
              apply:
                (annotations.bindingDefinition):
                  - method: "GET"
                    input: "NONE"
                    output: "REQUIRED"
                  - method: "POST"
                    input: "NONE"
                    output: "REQUIRED"
                type: object
                description: |
                  Property or value over which Fact value applies.
                required: false
                properties:
                  id:
                    (annotations.bindingDefinition):
                      - method: "GET"
                        input: "NONE"
                        output: "REQUIRED"
                      - method: "POST"
                        input: "NONE"
                        output: "REQUIRED"
                    enum: [ "MONTHLY_AVERAGE_BALANCE", "CURRENT_BALANCE", "TRANSFER_AMOUNT" ]
                    type: string
                    description: |
                      Property identification.
                    required: false
                  name:
                    (annotations.bindingDefinition):
                      - method: "GET"
                        input: "NONE"
                        output: "REQUIRED"
                      - method: "POST"
                        input: "NONE"
                        output: "REQUIRED"
                    type: string
                    description: |
                      Property name or description.
                    required: false
        outcomes:
          (annotations.bindingDefinition):
            - method: "GET"
              input: "NONE"
              output: "REQUIRED"
            - method: "POST"
              input: "NONE"
              output: "REQUIRED"
          type: array
          description: |
            Outcome or result of applying the condition.
          required: false
          items:
            properties:
              outcomeType:
                (annotations.bindingDefinition):
                  - method: "GET"
                    input: "NONE"
                    output: "REQUIRED"
                  - method: "POST"
                    input: "NONE"
                    output: "REQUIRED"
                type: object
                description: |
                  Outcome type.
                required: false
                properties:
                  id:
                    (annotations.bindingDefinition):
                      - method: "GET"
                        input: "NONE"
                        output: "REQUIRED"
                      - method: "POST"
                        input: "NONE"
                        output: "REQUIRED"
                    enum: [ "FEE_AMOUNT", "FEE_PERCENTAGE" ]
                    type: string
                    description: |
                      Outcome type identification.
                    required: false
                  name:
                    (annotations.bindingDefinition):
                      - method: "GET"
                        input: "NONE"
                        output: "REQUIRED"
                      - method: "POST"
                        input: "NONE"
                        output: "REQUIRED"
                    type: string
                    description: |
                      Outcome type name or description.
                    required: false
              feePercentage:
                (annotations.bindingDefinition):
                  - method: "GET"
                    input: "NONE"
                    output: "OPTIONAL"
                  - method: "POST"
                    input: "NONE"
                    output: "OPTIONAL"
                type: number
                required: false
                description: |
                  Outcome percental value.
              feeAmount:
                (annotations.bindingDefinition):
                  - method: "GET"
                    input: "NONE"
                    output: "OPTIONAL"
                  - method: "POST"
                    input: "NONE"
                    output: "OPTIONAL"
                type: object
                required: false
                description: |
                  Outcome amount.
                properties:
                  amount:
                    (annotations.bindingDefinition):
                      - method: "GET"
                        input: "NONE"
                        output: "REQUIRED"
                      - method: "POST"
                        input: "NONE"
                        output: "REQUIRED"
                    type: number
                    description: |
                      Outcome amount value.
                  currency:
                    (annotations.bindingDefinition):
                      - method: "GET"
                        input: "NONE"
                        output: "REQUIRED"
                      - method: "POST"
                        input: "NONE"
                        output: "REQUIRED"
                    type: string
                    description: |
                      String based on ISO-4217 for specifying the Outcome amount amount.
              apply:
                (annotations.bindingDefinition):
                  - method: "GET"
                    input: "NONE"
                    output: "OPTIONAL"
                  - method: "POST"
                    input: "NONE"
                    output: "OPTIONAL"
                type: object
                description: |
                  Property or value over which Outcome fee applies.
                properties:
                  id:
                    (annotations.bindingDefinition):
                      - method: "GET"
                        input: "NONE"
                        output: "REQUIRED"
                      - method: "POST"
                        input: "NONE"
                        output: "REQUIRED"
                    enum: [ "MONTHLY_AVERAGE_BALANCE", "CURRENT_BALANCE", "TRANSFER_AMOUNT" ]
                    type: string
                    description: |
                      Property identification.
                  name:
                    (annotations.bindingDefinition):
                      - method: "GET"
                        input: "NONE"
                        output: "REQUIRED"
                      - method: "POST"
                        input: "NONE"
                        output: "REQUIRED"
                    type: string
                    description: |
                      Property name or description.
              dueDate:
                (annotations.bindingDefinition):
                  - method: "GET"
                    input: "NONE"
                    output: "OPTIONAL"
                  - method: "POST"
                    input: "NONE"
                    output: "OPTIONAL"
                type: datetime
                required: false
                format: rfc3339
                description: |
                  String based on ISO-8601 date format for specifying the next date when the Outcome will be generated.
