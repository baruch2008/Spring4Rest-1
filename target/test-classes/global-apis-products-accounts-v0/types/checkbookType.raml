#%RAML 1.0 Library
uses:
  annotations: ../../global-apis-commons-commons-v0/annotations/annotationsLibrary.raml

types:
  checkbookType:
    type: object
    properties:
      id:
        (annotations.bindingDefinition):
          - method: "GET"
            input: "NONE"
            output: "REQUIRED"
        type: string
        enum: ["CHECK", "PROMISSORY_NOTE"]
        (annotations.enumDescription):
          - CHECK: is a document that orders a bank to pay a specific amount of money from a person's account to the person in whose name the cheque has been issued.
          - PROMISSORY_NOTE: A financial instrument, in which one party (the maker or issuer) promises in writing to pay a determinate sum of money to other (the payee), either at a fixed or determinable future time or on demand of the payee, under specific terms.
        description: |
          Identifier associated to the checkbook type.
        required: false
      name:
        (annotations.bindingDefinition):
          - method: "GET"
            input: "NONE"
            output: "REQUIRED"
        type: string
        description: |
          Description associated to the checkbook type.
        required: false
