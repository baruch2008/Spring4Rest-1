#%RAML 1.0 Library
uses:
  annotations:  ../../global-apis-commons-commons-v0/annotations/annotationsLibrary.raml

types:
  block:
    type: object
    properties:
      blockId:
        (annotations.bindingDefinition):
          - method: "POST"
            input: "REQUIRED"
            output: "REQUIRED"
        type: string
        required: false
        description: |
          Block identifier associated to the account.
      name:
        (annotations.bindingDefinition):
          - method: "POST"
            input: "NONE"
            output: "OPTIONAL"
        type: string
        required: false
        description: |
          Block name associated to the account.
      blockDate:
        (annotations.bindingDefinition):
          - method: "POST"
            input: "NONE"
            output: "REQUIRED"
        type: date-only
        required: false
        description: |
          String based on ISO-8601 date format for specifying when the user requested to block the account.
