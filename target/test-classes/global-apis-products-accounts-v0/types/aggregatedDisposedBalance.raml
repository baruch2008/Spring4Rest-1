#%RAML 1.0 Library
uses:
  annotations:  ../../global-apis-commons-commons-v0/annotations/annotationsLibrary.raml

types:
  aggregatedDisposedBalance:
    type: object
    properties:
      currentBalances:
        (annotations.bindingDefinition):
          - method: "GET"
            input: "NONE"
            output: "REQUIRED"
        type: array
        required: false
        description: |
          This balance means the maximum expendable amount at the moment of retrieval. This balance may be provided in several currencies (depending on the country). It\'s represented by the current disposed balance monetary amount and the currency related to the current disposed balance.
        items:
          properties:
            amount:
              (annotations.bindingDefinition):
                - method: "GET"
                  input: "NONE"
                  output: "REQUIRED"
              type: number
              description: |
                Current disposed balance monetary amount.
            currency:
              (annotations.bindingDefinition):
                - method: "GET"
                  input: "NONE"
                  output: "REQUIRED"
              type: string
              description: |
                String based on ISO-4217 for specifying the currency related to the current disposed balance.
      postedBalances:
        (annotations.bindingDefinition):
          - method: "GET"
            input: "NONE"
            output: "REQUIRED"
        type: array
        required: false
        description: |
          This balance is the maximum expendable amount calculated at the end of the last business day. This balance may be provided in several currencies (depending on the country). It\'s represented by the posted disposed balance monetary amount and the currency related to the posted disposed balance.
        items:
          properties:
            amount:
              (annotations.bindingDefinition):
                - method: "GET"
                  input: "NONE"
                  output: "REQUIRED"
              type: number
              description: |
                Posted disposed balance monetary amount.
            currency:
              (annotations.bindingDefinition):
                - method: "GET"
                  input: "NONE"
                  output: "REQUIRED"
              type: string
              description: |
                String based on ISO-4217 for specifying the currency related to the posted disposed balance.
      pendingBalances:
        (annotations.bindingDefinition):
          - method: "GET"
            input: "NONE"
            output: "REQUIRED"
        type: array
        required: false
        description: |
          This balance is the aggregated amount of all pending transactions. This amount is the result of substracting postedBalance to currentBalance. This balance may be provided in several currencies (depending on the country). It\'s represented by the pending disposed balance monetary amount and the currency related to the pending disposed balance.
        items:
          properties:
            amount:
              (annotations.bindingDefinition):
                - method: "GET"
                  input: "NONE"
                  output: "REQUIRED"
              type: number
              description: |
                Pending disposed balance monetary amount.
            currency:
              (annotations.bindingDefinition):
                - method: "GET"
                  input: "NONE"
                  output: "REQUIRED"
              type: string
              description: |
                String based on ISO-4217 for specifying the currency related to the pending disposed balance.
