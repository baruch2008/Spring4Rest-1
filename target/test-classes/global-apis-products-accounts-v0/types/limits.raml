#%RAML 1.0 Library
uses:
  annotations: ../../global-apis-commons-commons-v0/annotations/annotationsLibrary.raml

types:
  limits:
    type: array
    items:
      properties:
        limitId:
          (annotations.bindingDefinition):
            - method: "GET"
              input: "NONE"
              output: "REQUIRED"
          enum: [MAXIMUM_CREDIT]
          (annotations.enumDescription):
            - MAXIMUM_CREDIT: Account maximum credit
          type: string
          description: |
            Limit identifier.
          required: false
        name:
          (annotations.bindingDefinition):
            - method: "GET"
              input: "NONE"
              output: "REQUIRED"
          type: string
          description: |
            Limit localized description.
          required: false
        amountLimits:
          (annotations.bindingDefinition):
            - method: "GET"
              input: "NONE"
              output: "REQUIRED"
          type: array
          description: |
            Monetary restriction related to the current limit. This amount may be provided in several currencies (depending on the country).
          required: false
          items:
            properties:
              amount:
                (annotations.bindingDefinition):
                  - method: "GET"
                    input: "NONE"
                    output: "REQUIRED"
                type: number
                description: |
                  Monetary amount related to the limit.
              currency:
                (annotations.bindingDefinition):
                  - method: "GET"
                    input: "NONE"
                    output: "REQUIRED"
                type: string
                description: |
                  String based on ISO-4217 for specifying the currency related to the amount limit.
