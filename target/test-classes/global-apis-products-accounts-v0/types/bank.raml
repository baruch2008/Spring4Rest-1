#%RAML 1.0 Library
uses:
  annotations: ../../global-apis-commons-commons-v0/annotations/annotationsLibrary.raml
  branch: branch.raml
types:
  bank:
    type: object
    properties:
      bankId:
        (annotations.bindingDefinition):
          - method: "PATCH"
            input: "NONE"
            output: "REQUIRED"
          - method: "GET"
            input: "NONE"
            output: "REQUIRED"
          - method: "POST"
            input: "NONE"
            output: "REQUIRED"
        type: string
        required: false
        description: |
          Unique bank identifier.
      name:
        (annotations.bindingDefinition):
          - method: "PATCH"
            input: "NONE"
            output: "REQUIRED"
          - method: "GET"
            input: "NONE"
            output: "REQUIRED"
          - method: "POST"
            input: "NONE"
            output: "REQUIRED"
        (annotations.countryException):
          - country: US
            description: Bank name is optional in the US        
            
        type: string
        required: false
        description: |
          Bank name.
      branch:
        (annotations.bindingDefinition):
          - method: "GET"
            input: "NONE"
            output: "REQUIRED"
          - method: "POST"
            input: "NONE"
            output: "REQUIRED"
        type: branch.branch
        description: |
          Office of the bank associated with the customer.
        required: false
